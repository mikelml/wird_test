.pokemon-details-container {
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 50px;
  width: 65%;
  .navbar {
    display: flex;
    flex-direction: row;
    width: 100%;
    justify-content: space-between;
    a {
      color: black;
      display: flex;
      flex-direction: row;
      align-items: center;
      h2 {
        font-size: 18px;
        margin-left: 10px;
        text-transform: capitalize;
      }
      svg {
        margin-top: 2px;
        width: 40px;
        height: 30px;
      }
    }
    button {
      margin-top: auto;
      margin-bottom: auto;
      cursor: pointer;
      border-radius: 10px;
      background-color: #fff;
      color: black;
      font-size: 20px;
      height: 50px;
      width: 200px;
    }
  }
  .pokemon-details {
    display: flex;
    flex-direction: column;
    align-items: center;
    img {
      background-color: #d9d9d9;
      width: 300px;
      height: 300px;
      object-fit: contain;
      border-radius: 1px;
      margin-top: -55px;
      margin-bottom: 30px;
    }
    .pokemon-details-description {
      background-color: #d9d9d9;
      width: 400px;
      height: 200px;
      font-size: 18px;
      display: flex;
      justify-content: space-between;
      text-align: start;
      .description-grl {
        width: 50%;
        padding: 20px 30px;
        div {
          text-transform: capitalize;
        }
      }
      .description-stats {
        width: 50%;
        padding: 20px 30px;
        .stat-item {
          display: flex;
        }
        .stat-tittle {
          font-weight: 600;
          margin-right: 5px;
        }
      }
    }
  }
}
